include admin/index_header
include navigation

.container(ng-app='myApp')
    .row
        .col-md-12
            h4 User Details
            .table-responsive.table-striped( ng-controller= 'userCtrl' )
                input(type='search' class='form-control' placeholder='Search' ng-model='query' )
                table#mytable.table.table-bordred.table-striped
                    thead
                        th( ng-click='sort(usersKey)' ng-repeat= '(usersKey, usersValue)  in user[0] | keyFilter: "__v" | keyFilter: "_id" | keyFilter: "createdAt" | keyFilter: "motherTongue" | keyFilter: "password"| keyFilter: "nationality" | keyFilter: "password"  | keyFilter: "profilePic" | keyFilter: "profilePicUrl" | keyFilter: "status" | orderBy: "firstName" ' ) {{usersKey | labelCase }}
                            span( ng-show='sort.field === usersKey  && !sort.order' class='glyphicon glyphicon-chevron-down' )
                            span( ng-show='sort.field === usersKey  && sort.order' class='glyphicon glyphicon-chevron-up' )
                    tbody
                        tr( dir-paginate= '(usersKey, usersValue) in user | filter: query | itemsPerPage: pageSize | orderBy: sort.field : sort.order ' current-page="currentPage" )
                            td( ng-repeat= 'userDet in usersValue | keyFilter: "__v" | keyFilter: "_id" | keyFilter: "password" | keyFilter: "createdAt" | keyFilter: "motherTongue"| keyFilter: "nationality" | keyFilter: "password"  | keyFilter: "profilePic" | keyFilter: "profilePicUrl" | keyFilter: "status" ' ) {{userDet | dateFilter | genderFilter }}
                            td
                                p(data-placement='top', data-toggle='tooltip', title='Edit')
                                    button.btn.btn-primary.btn-xs(data-title='Edit', data-toggle='modal', data-target='#edit')
                                        span.glyphicon.glyphicon-pencil
                            td
                                p(data-placement='top', data-toggle='tooltip', title='Delete')
                                    button.btn.btn-danger.btn-xs(data-title='Delete', data-toggle='modal', data-target='#delete')
                                        span.glyphicon.glyphicon-trash

                .clearfix
                ul.pagination.pull-right(dir-pagination-controls)

    #edit.modal.fade(tabindex='-1', role='dialog', aria-labelledby='edit', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true')
                        span.glyphicon.glyphicon-remove(aria-hidden='true')
                    h4#Heading.modal-title.custom_align Edit Your Detail
                .modal-body
                    .form-group
                        input.form-control(type='text', placeholder='Mohsin')
                    .form-group
                        input.form-control(type='text', placeholder='Irshad')
                    .form-group
                        textarea.form-control(rows='2', placeholder='CB 106/107 Street # 11 Wah Cantt Islamabad Pakistan')
                .modal-footer
                    button.btn.btn-warning.btn-lg(type='button', style='width: 100%;')
                        span.glyphicon.glyphicon-ok-sign
                        |  Update
            // /.modal-content
        // /.modal-dialog
    #delete.modal.fade(tabindex='-1', role='dialog', aria-labelledby='edit', aria-hidden='true')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true')
                        span.glyphicon.glyphicon-remove(aria-hidden='true')
                    h4#Heading.modal-title.custom_align Delete this entry
                .modal-body
                    .alert.alert-danger
                        span.glyphicon.glyphicon-warning-sign
                        |  Are you sure you want to delete this Record?
                .modal-footer
                    button.btn.btn-success(type='button')
                        span.glyphicon.glyphicon-ok-sign
                        |  Yes
                    button.btn.btn-default(type='button', data-dismiss='modal')
                        span.glyphicon.glyphicon-remove
                        |  No
            // /.modal-content
        // /.modal-dialog


include admin/index_footer